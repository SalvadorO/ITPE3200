@model List<WebApp.Model.AdminAirplane>

@{
    ViewBag.Title = "Flymaskiner";
}
<a href="@Url.Action("MainPage", "Admin", new { area="" })" class="btn btn-default" title="Hjem">
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true" style="font-size:15px"></span>
    Tilbake
</a>
<br />
<h2>Flymaskiner</h2>

<p>
    @Html.ActionLink("Ny flymaskin", "NewAirplane", "Admin", new { emtpy = "" }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Seats)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seats)
        </td>
        <td>
            <a href="@Url.Action("EditAirplane", "Admin", new { id = item.ID })" class="btn btn-primary" title="Rediger">
                <span class="glyphicon glyphicon-edit" aria-hidden="true" style="font-size:15px"></span>
            </a>
        </td>
    </tr>
}

</table>
