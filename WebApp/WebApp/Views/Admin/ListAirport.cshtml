@model List<WebApp.Model.AdminAirport>

@{
    ViewBag.Title = "Flyplasser";
}
<a href="@Url.Action("MainPage", "Admin", new { area="" })" class="btn btn-default" title="Hjem">
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true" style="font-size:15px"></span>
    Tilbake
</a>
<br />
<h2>Flyplasser</h2>

<p>
    @Html.ActionLink("Ny flyplass", "NewAirport", "Admin", new { emtpy = "" }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Country)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.ActionLink("Endre", "EditAirport", new { id = item.ID }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
