@model WebApp.Model.EmployeeRegister

@{
    ViewBag.Title = "Register";
}

<h2>Registrer ny ansatt</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @if (ViewBag.UsernameExist != null)
        {
